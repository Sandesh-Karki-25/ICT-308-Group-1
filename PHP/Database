<?php
// Show useful errors while developing (remove in production)
ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
error_reporting(E_ALL);

// Make mysqli throw exceptions instead of hiding them
mysqli_report(MYSQLI_REPORT_ERROR | MYSQLI_REPORT_STRICT);

$servername = "localhost";
$username   = "root";
$password   = "";        // XAMPP default
$dbname     = "login";   // your DB name

// Connect
$conn = new mysqli($servername, $username, $password, $dbname);

// Always set a safe charset (emoji + all Unicode)
$conn->set_charset('utf8mb4');

// Optional: if you want consistent SQL mode during dev
//$conn->query("SET sql_mode = 'STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION'");
